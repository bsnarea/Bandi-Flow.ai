requests:
  - name: Weather by City
    request:
      method: GET
      url: http://api.openweathermap.org/data/2.5/weather
      params:
        q: Seoul,KR
        appid: "{{OPENWEATHER_API_KEY}}"
        units: metric
        lang: kr
      headers:
        Accept: application/json

  - name: Weather by Coordinates
    request:
      method: GET
      url: http://api.openweathermap.org/data/2.5/weather
      params:
        lat: 37.5665
        lon: 126.9780
        appid: "{{OPENWEATHER_API_KEY}}"
        units: metric
        lang: kr
      headers:
        Accept: application/json

  - name: Weather by ZIP
    request:
      method: GET
      url: http://api.openweathermap.org/data/2.5/weather
      params:
        zip: 04524,KR
        appid: "{{OPENWEATHER_API_KEY}}"
        units: metric
        lang: kr
      headers:
        Accept: application/json
  ]
}
